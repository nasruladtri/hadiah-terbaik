# ================================
# DATABASE CONFIGURATION
# ================================
DB_USER=postgres
DB_PASS=change_me_in_production
DB_NAME=kua_dukcapil_db

# ================================
# BACKEND CONFIGURATION
# ================================
# JWT Secret Key (IMPORTANT: Change this in production!)
JWT_SECRET=change_me_to_random_string_in_production

# Node Environment (development | production)
NODE_ENV=development

# Backend Port
PORT=3100

# CORS Origin - Frontend URL allowed to access the API
# Development example: http://localhost:2200
# Production example: https://yourdomain.com
CORS_ORIGIN=http://localhost:2200

# ================================
# FRONTEND CONFIGURATION
# ================================
# Backend API Base URL
# Development example: http://localhost:3100/api/v1
# Production example: https://api.yourdomain.com/api/v1
VITE_API_BASE_URL=http://localhost:3100/api/v1

# ================================
# CLOUDFLARE TUNNEL
# ================================
# Cloudflare Tunnel Token (Get from Cloudflare Zero Trust dashboard)
TUNNEL_TOKEN=your_tunnel_token_here
